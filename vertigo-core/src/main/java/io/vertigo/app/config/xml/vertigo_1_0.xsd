<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<xs:element name="config">
		<xs:complexType>
	    	<xs:sequence>
	        	<xs:element name="boot" type="bootType" minOccurs="0" maxOccurs="1"/>
	        	<xs:choice minOccurs="0" maxOccurs="unbounded">
	        		<xs:element name="module" type="moduleType" minOccurs="0" maxOccurs="1"/>
	        		<xs:element name="feature" type="featureType" minOccurs="0" maxOccurs="1"/>
	        	</xs:choice>
	        	<xs:element name="init" type="initType" minOccurs="0" maxOccurs="1"/>
			</xs:sequence>
		</xs:complexType>
  	</xs:element>
		
	<xs:complexType name="definitionsType">
    	<xs:sequence>
        	<xs:element name="provider" type="providerType" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="providerType">
	  	<xs:sequence>
	  		<xs:element name="param" type="paramType" minOccurs="0" maxOccurs="unbounded"/>
	  		<xs:element name="resource" type="resourceType" minOccurs="0" maxOccurs="unbounded"/>
	  	</xs:sequence>
	  	<xs:attribute name="class" type="xs:string" use="required"/>
	</xs:complexType>

	<xs:complexType name="resourceType">
	  	<xs:attribute name="type" type="xs:string" use="required"/>
	  	<xs:attribute name="path" type="xs:string" use="required"/>
	</xs:complexType>
	
	<xs:complexType name="bootType">
		<!--Boot is a module without definitions, without aspects, with only pure components  -->
		<xs:sequence>
			<xs:element name="plugin" type="pluginType" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
		<xs:attribute name="locales" type="xs:string" use="required"/>
	</xs:complexType>
	
	<xs:complexType name="moduleType">
		<xs:sequence>
        	<xs:element name="definitions" type="definitionsType" minOccurs="0"/>
			<xs:element name="component" type="componentType" minOccurs="0" maxOccurs="unbounded"/>
			<xs:element name="aspect" type="aspectType" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
 		<xs:attribute name="name" type="xs:string" use="required"/>
	</xs:complexType>
	
	<xs:complexType name="componentType">
		<xs:sequence>
			<xs:element name="param" type="paramType" minOccurs="0" maxOccurs="unbounded"/>
			<xs:element name="plugin" type="pluginType" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
		<xs:attribute name="api" type="xs:string" use="optional"/>
		<xs:attribute name="class" type="xs:string" use="required"/>
	</xs:complexType>

	<xs:complexType name="pluginType">
		<xs:sequence>
			<xs:element name="param" type="paramType" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
		<xs:attribute name="class" type="xs:string" use="required"/>
	</xs:complexType>
	
	<xs:complexType name="paramType">
	  	<xs:attribute name="name" type="xs:string" use="required"/>
	  	<xs:attribute name="value" type="xs:string" use="required"/>
	</xs:complexType>

	<!-- Aspects-->
	<xs:complexType name="aspectType">
	  	<xs:attribute name="class" type="xs:string" use="required"/>
	</xs:complexType>
	
	<xs:complexType name="initType">
		<xs:sequence>
			<xs:element name="initializer" type="initializerType" minOccurs="0" maxOccurs="unbounded"/>
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="initializerType">
		<xs:attribute name="class" type="xs:string" use="required"/>
	</xs:complexType>
	<xs:complexType name="featureType">
		<xs:attribute name="class" type="xs:string" use="required"/>
	</xs:complexType>
	
</xs:schema>