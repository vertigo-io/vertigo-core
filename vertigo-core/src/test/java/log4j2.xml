<Configuration>

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyyMMdd} %d{HH:mm:ss} [%t] %-5p %-11c{1} - %m %x %n" />
		</Console>
	</Appenders>


	<!-- Pour les tests on ne loggue que FATAL. -->
	<Loggers>
		<Root level="fatal">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>

</Configuration>